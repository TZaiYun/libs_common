<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/update_notice_bg">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_24dp"
        android:text="请升级APP至0.00版"
        android:textColor="#0d0d0d"
        android:layout_marginTop="@dimen/size_6dp"
        android:textSize="@dimen/text_size_21sp" />

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:paddingLeft="@dimen/size_24dp"
        android:paddingRight="@dimen/size_14dp"
        android:text="升级描述"
        android:textColor="#999999"
        android:textSize="@dimen/text_size_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="#D0D0D0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/size_8dp"
            android:text="确认"
            android:gravity="center"
            android:textColor="#48CBFE"
            android:textSize="@dimen/text_size_21sp" />

        <View
            android:layout_width="@dimen/size_1dp"
            android:layout_height="match_parent"
            android:background="#D0D0D0"/>

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/size_8dp"
            android:text="取消"
            android:gravity="center"
            android:textColor="#48CBFE"
            android:textSize="@dimen/text_size_21sp" />

    </LinearLayout>

</LinearLayout>