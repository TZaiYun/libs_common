<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/size_2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_e3e3e3"
                android:endColor="@color/color_E6E6E6"
                android:startColor="@color/gray_C8" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/size_2dp" />
                <gradient
                    android:centerColor="@color/color_E83B04"
                    android:endColor="@color/color_E83B04"
                    android:startColor="@color/color_E83B04" />

            </shape>
        </clip>
    </item>

</layer-list>

